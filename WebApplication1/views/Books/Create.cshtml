@model Book
<h1>Yeni kitap ekleme sayfası</h1>
<hr/>

<form method="post" asp-controller="books" asp-action="Create">
    <div class="form-group">
        <label asp-for="KitapAdi">Kitap adı</label>
        <input asp-for="KitapAdi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Aciklama">Kitap Açıklaması</label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="KitapYazari">Kitabın Yazarı</label>
        <input asp-for="KitapYazari" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="YayinTarihi">Kitabın yayın tarihi</label>
        <input asp-for="YayinTarihi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Kitap resmi</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GenreId">Kitap türünün id`si</label>
        <input asp-for="GenreId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>

</form>

