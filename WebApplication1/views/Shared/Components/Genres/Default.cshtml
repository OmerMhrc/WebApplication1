@model List<Genre>

<div class="list-group">
    <a href="/Books/List" class="list-group-item list-group-item-action
                              @(ViewBag.SelectedGenre==null?"active":"")">Tüm kitaplar</a>
    @foreach (var genre in Model){
      <a href="/Books/List/@genre.GenreId" class="list-group-item list-group-item-action
                           @(ViewBag.SelectedGenre==genre.GenreId.ToString()?"active":"")">@genre.Name</a>
    }
</div>